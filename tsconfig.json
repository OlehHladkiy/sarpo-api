{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@generated/*": ["generated/*"],
      "@jobs/*": ["jobs/*"],
      "@modules/*": ["modules/*"],
      "@services/*": ["services/*"],
      "@types": ["types"],
      "@utils/*": ["utils/*"]
    },
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types/"
    ]
  }
}
